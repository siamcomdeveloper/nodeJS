<section id="main">
      <div class="container">
        <div class='row'>
            <h3>Form Create Content</h3>
            <form action="<% url %>" method="POST">
                <div class="form-group">
                  <label for="topic">Topic</label>
                  <input type="text" name="topic" class="form-control" placeholder="Topic" value="<%= $data.topic or ''%>">
                </div>
                <div class="form-group">
                  <label for="content">Content</label>
                  <textarea name="content" class="form-control" rows="8" cols="40"><%=$data.content or ''%></textarea>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
        </div>
    </div>
  </section>
