<section id="main">
      <div class="container">
        <div class="row">
            <a class="btn btn-primary" href="../blogs/add">Create</a>
            <table class="table table-striped">
                <tr>
                    <th>
                        NO.
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        Topic
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                <% for(var i = 0;i < data.length;i++) { %>
                <tr>
                    <td><%=(i+1)%></td>
                    <td>
                        <%= data[i].id %>
                    </td>
                    <td>
                        <%= data[i].topic %>
                    </td>
                    <td>
                        <%= data[i].content %>
                    </td>
                    <td>
                        <a id="edit" class="fl btn btn-primary" href="../blogs/edit/<%=data[i].id%>">Edit</a>
                        <form action="../blogs/delete/<%=data[i].id%>" method="post" onsubmit="return(confirm('Do you want to delete this ?'))">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
      </div>
</section>
