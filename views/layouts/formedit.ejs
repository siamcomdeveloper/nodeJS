<section id="main">
      <div class="container">
        <div class='row'>
            <h3>Form Edit Content</h3>
            <form action="/blogs/edit" method="POST">
              <div class="form-group">
                <label for="topic">Topic</label>
                <input type="hidden" name="id" class="form-control" value="<%= data.id %>">
                <input type="text" name="topic" class="form-control" placeholder="Topic" value="<%= data.topic %>">
              </div>
              <div class="form-group">
                <label for="content">Content</label>
                <textarea name="content" class="form-control" rows="8" cols="40"><%= data.content %></textarea>
              </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
  </section>
