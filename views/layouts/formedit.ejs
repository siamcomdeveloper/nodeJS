<section id="main">
      <div class="container">
        <div class='row'>
            <h3>Form Create Content</h3>
            <h1><%= data %></h1>
            <h1><%= data.length %></h1>
            <h1><%= data[0].id %></h1>
            <h1>TEST</h1>
            <form action="/blogs/edit/:id" method="POST">
              <div class="form-group">
                <label for="topic">Topic</label>
                <input type="text" name="topic" class="form-control" placeholder="Topic" value="<%= data.topic %>">
              </div>
              <div class="form-group">
                <label for="content">Content</label>
                <textarea name="content" class="form-control" rows="8" cols="40"><%= data.content %></textarea>
              </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
  </section>
